/* 16:05 2015-03-28 Saturday */
#include <stido.h>
#define N 20

int main()
{
    int a[N] = {0};
    int i = 0;
    int * p = a;
    int * q = NULL;

    printf("Input an num:");
    
    while ((a[i] = getchar()) != '\0')
    {
        i++;
    }

    q = a + i - 1;

    while ( *p <= *q )
    {
        p++;
        q--;
    }

    return 0;
}

